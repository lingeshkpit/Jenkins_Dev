pipeline {
    agent any
    
    stages {
          stage ('MVN_build ') {
            steps {
                sh '''
                 rm -rf /var/lib/jenkins/workspace/maven_pipe/my-app
                mvn archetype:generate -DgroupId=com.mycompany.app -DartifactId=my-app -DarchetypeArtifactId=maven-archetype-quickstart -DarchetypeVersion=1.4 -DinteractiveMode=false
               '''
                }
             }
        stage('Docker_images') {
            steps {
                sh 'docker images'
            }
        }
    
        stage('Build docker image') {
            steps {
                sh 'docker build -t lingeswararao/tomcat .'
            }
        }
        stage('login to dockerhub') {
            steps{
                sh 'docker login -u lingeswararao -p hitachi@123'
            }
        }
       stage('Push container') {
        steps {
            sh '''
              docker tag tomcat lingeswararao/tomcat
              docker push lingeswararao/tomcat
             '''
           }
           }
         stage('Docker_RMI') {
            steps {
                sh 'docker rmi -f $(docker images -q)'
            }
          }
     }
      }
