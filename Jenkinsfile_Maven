pipeline {
    agent any
    
    stages {
          stage ('MVN_build ') {
            steps {
                sh '''
                 rm -rf /var/lib/jenkins/workspace/maven_pipe/my-app
                mvn archetype:generate -DgroupId=com.mycompany.app -DartifactId=my-app -DarchetypeArtifactId=maven-archetype-quickstart -DarchetypeVersion=1.4 -DinteractiveMode=false
               '''
                }
             }
        stage('Docker_images') {
            steps {
                sh 'docker images'
            }
        }
        stage('Docker_pull') {
            steps {
                sh 'docker pull tomcat'
            }
        }
        
        stage('Build docker image') {
            steps {
                sh 'docker build -t devops .'
            }
        }
        
       stage('Push container') {
        steps {
            echo "Workspace is $WORKSPACE"
            dir("$WORKSPACE/Dockerfile") {
                script {
                    def REGISTRY_URL = "https://index.docker.io/v1/"
                    def USER_NAME = "lingeswararao"
                    docker.withRegistry("$REGISTRY_URL", 'hitachi@2023') {
                        def image = docker.build("$USER_NAME/tomcat:${env.BUILD_ID}")
                        image.push()
                    }
                }
         stage('Docker_RMI') {
            steps {
                sh 'docker rmi $(docker images -q)'
            }
          }
     }
      }
