pipeline {
    agent any
    
    stages {
          stage ('MVN_build ') {
            steps {
                sh '''
                 rm -rf /var/lib/jenkins/workspace/maven_pipe/my-app
                mvn archetype:generate -DgroupId=com.mycompany.app -DartifactId=my-app -DarchetypeArtifactId=maven-archetype-quickstart -DarchetypeVersion=1.4 -DinteractiveMode=false
               '''
                }
             }
        stage('Docker_images') {
            steps {
                sh 'docker images'
            }
        }
        stage('Docker_pull') {
            steps {
                sh 'docker pull tomcat'
            }
        }
        
        stage('Build docker image') {
            steps {
                sh 'docker build -t lingeswararao:devops .'
            }
        }
        
       stage('Push container') {
        steps {
            sh '''
             docker login -u lingeswararao -p hitachi@2023
             docker tag tomcat lingeswararao/devops
             docker push lingeswararao:devops
             '''
           }
           }
         stage('Docker_RMI') {
            steps {
                sh 'docker rmi $(docker images -q)'
            }
          }
     }
      }
